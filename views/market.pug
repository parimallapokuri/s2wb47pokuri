extends layout
block content
  h1= title
  p Welcome to the market 
  div(class="container-fluid")
        div(class="row")
            -
                let market = [
                    {
                        "itemType": "Vegetables",
                        "Quantity": 15,
                        "price": "20$"
                    },
                    {
                        "itemType": "Drinks",
                        "Quantity": 40,
                        "price": "10$"
                    },
                    {
                        "itemType": "Meat",
                        "Quantity": 30,
                        "price": "40$"
                    },                   
                ]
            each v,index in market
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.itemType}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }